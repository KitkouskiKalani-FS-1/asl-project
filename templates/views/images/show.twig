{% extends "layouts/base.twig" %}

{% block main_content %}
    <h2>About Image #{{image.id}}</h2>
    <ul styles="list-style:none;">
        <li>
            <label>Id: </label> {{image.id}}
        </li>
        <li>
            <label>Assigned Variant: </label> {{variant.title}}
        </li>
    </ul>
    <p>
        <a href="/images/{{image.id}}/edit">Edit</a> | <a method= "POST" href="/images/{{image.id}}/delete">Delete</a>
    </p>
{% endblock %}