{% extends "layouts/base.twig" %}

{% block main_content %}
    <h2>All Products</h2>
    <ul>
    {% for product in products %}
        <li>
            {{product.title}} - ${{product.price}} - 
            <a class="underline underline-offset-1" href="/products/{{ product.id }}">Edit</a>
            <a class="underline underline-offset-1" href="/products/{{ product.id }}/delete">Delete</a>
        </li>
    {% endfor %}
    </ul>
    
    <a href="/products/new">
    <button class="py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" type="submit">
        Create New Product
    </button>
    </a>
{% endblock %}